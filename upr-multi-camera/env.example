# ============================================
# CONFIGURATION MULTI-CAMÉRAS UPR
# ============================================

# === Caméras USB ===
CAMERAS_USB_MAX=6

# === Caméras IP/RTSP ===
CAMERAS_IPS=""

# === API Backend Django ===
UPR_API_URL=http://localhost:8000/api
UPR_API_KEY=change-me-to-secure-key

# === Seuils de Détection ===
SIMILARITY_THRESHOLD=0.55
WARN_THRESHOLD=0.45
TOP_K_MATCHES=3

# === Performance ===
USE_GPU=false
INSIGHTFACE_PROVIDER=CPUExecutionProvider
INSIGHTFACE_MODEL=buffalo_l
DETECTION_SIZE=640
TARGET_FPS=10

# === Résilience ===
RETRY_BACKOFF=5
MAX_RETRIES=10
CONNECTION_TIMEOUT=10

# === Stockage Images ===
STORE_DETECTION_FRAMES=true
STORAGE_PATH=./storage/detections
STORAGE_TYPE=local

# === Logging ===
LOG_LEVEL=INFO
LOG_DIR=./logs
LOG_MAX_SIZE=100

# === Sécurité ===
ENABLE_HTTPS=true
RATE_LIMIT_PER_MINUTE=60

# === Monitoring ===
ENABLE_HEALTH_CHECK=true
HEALTH_CHECK_PORT=8080

# === Développement ===
DEBUG=false
SIMULATE_DETECTIONS=false

